@model Tuan4_NguyenXuanTam.Models.Sach

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Sách</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Sach</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Mã loại:</dt>

        <dd>
            @Html.DisplayFor(model => model.maloai)
        </dd>

        <dt>Tên sách:</dt>

        <dd>
            @Html.DisplayFor(model => model.tensach)
        </dd>

        <dt>Hình ảnh:</dt>

        <dd>
            <div class="display-label"><img src="@Model.hinh"</div>
        </dd>

        <dt>Giá bán:</dt>

        <dd>
            @Html.DisplayFor(model => model.giaban)
        </dd>

        <dt>Ngày cập nhật:</dt>

        <dd>
            @Html.DisplayFor(model => model.ngaycapnhat)
        </dd>

        <dt>Số lượng tồn:</dt>

        <dd>
            @Html.DisplayFor(model => model.soluongton)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ListSach")
        </div>
    }
</div>
