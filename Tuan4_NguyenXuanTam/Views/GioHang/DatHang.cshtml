@model IEnumerable<Tuan4_NguyenXuanTam.Models.GioHang>
@{
    ViewBag.Title = "DatHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đặt Hàng</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã sách
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tensach)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.giaban)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.iSoluong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dThanhtien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.masach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tensach)
            </td>
            <td>
                <img src="@item.hinh" width="200px" />
            </td>
            @using (Html.BeginForm("CapNhapGioHang", "GioHang", new { @id = item.masach }))
            {
                <td>
                    @String.Format("{0:0,0}", item.giaban) VNĐ
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.iSoluong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dThanhtien)
                </td>
            }
        </tr>
    }
    <tr style="font-weight:bold; text-align:right; color:red">
        <td colspan="3">Số Lượng Sách: @ViewBag.TongSoLuong</td>
        <td colspan="4">Số Loại Sách: @ViewBag.ToSoLuongSanPham</td>
        <td colspan="5">Tổng Tiền: @String.Format("{0:0,0}", @ViewBag.TongTien)VND</td>
    </tr>
    <tr style="font-weight:bold; text-align:right">
        <td colspan="6">@Html.ActionLink("Trở về giỏ hàng", "GioHang", "GioHang")</td>
    </tr>

</table>

@using Tuan4_NguyenXuanTam.Models
<h2 style="text-align:center">Thông Tin Đặt Hàng</h2>
@{
    KhachHang kh = (KhachHang)Session["TaiKhoan"];
}
<form action="/GioHang/DatHang" method="post" id="formInput" onsubmit="return submitValidate(this)">
    <p id="messageValidate" class="text-danger"></p>
    <table align="center">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <tr style="height:40px">
                <td>Họ Tên Khách Hàng:</td>
                <td style="font-weight:bold">@kh.hoten</td>
            </tr>
            <tr style="height:40px">
                <td>Email:</td>
                <td style="font-weight:bold">@kh.email</td>
                <input value="@kh.email" name="clientEmail" style="display: none" />
            </tr>
            <tr style="height:40px">
                <td>Địa Chỉ:</td>
                <td style="font-weight:bold">@kh.diachi</td>
            </tr>
            <tr style="height:40px">
                <td>Điện Thoại:</td>
                <td style="font-weight:bold">@kh.dienthoai</td>
            </tr>
            <tr style="height:40px">  
                <td>Ngày Đặt:</td>
                <td>

                    <input type="date" name="ngaydat" id="NgayDat" />
                </td>
            </tr>
            <tr style="height:40px">
                <td>Ngày Giao:</td>
                <td style="font-weight:bold">
                    <input type="date" name="NgayGiao" id="NgayGiao" />
                </td>
            </tr>
            @section scripts{
                <script>
                    function submitValidate(form) {
                        let ngaydat = $("#NgayDat").val();
                        let ngaygiao = $("#NgayGiao").val();
                        if (ngaygiao < ngaydat) {
                            $("#messageValidate").empty().append("Ngày giao phải lớn hơn ngày hiện tại");
                        }
                        else {
                            form.submit();
                        }
                        return false;
                    }
                </script>
            }
            <tr style="height:40px">

                <td style="font-weight:bold">
                    <input type="submit" value="Đặt Hàng" class="btn btn-success" />
                </td>
            </tr>
        }
    </table>
</form>